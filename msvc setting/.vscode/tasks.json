{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: build",
        "command": "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\" &&",
        "args": [
          "cl.exe",
          "/Zi",
          "/EHsc",
          "/nologo",
          "/Fe:",
          "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
          "${file}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$msCompile"
        ],
        "group": "build",
        "detail": "compiler: cl.exe"
      }
    ]
  }